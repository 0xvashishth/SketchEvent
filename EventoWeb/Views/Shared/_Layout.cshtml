                <div class="dropdown-divider"></div>
                            @{
                                if (Context.Request.Cookies["UserId"]?.ToString() != null)
                                {
                                    var link = "/User/Details/" + Context.Request.Cookies["UserId"]?.ToString();
                                    <a class="dropdown-item" href="@link">Profile</a>
                                }
                            }
              </div>
            </li>
          </ul>
